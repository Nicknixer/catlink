{% if categories[0] is defined %}
    <div class="left-side-menu">Категории каталога</div>
    {% for category in categories %}
        <div class="left-side-items">
            <a href="#">{{ category.name }}</a>
        </div>
     {% endfor %}
{% endif %}
<div class="left-side-menu">Статистика каталога</div>
<div class="left-side-items">
    <span class="color-corn">Добавлено сайтов:</span> {{ sitesAmount }}
</div>
<!--
<div class="left-side-items">
    <span class="color-corn">Комментариев:</span> 0
</div>
-->
{% if lastSite.id is defined %}
<div class="left-side-items">
    <span class="color-corn">Последний сайт:</span>
    <a style="text-decoration: underline;" href="{{ path('showSite', {'id': lastSite.id}) }}">{{ lastSite.title }}</a>
</div>
{% endif %}